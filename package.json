{
  "name": "@my-f-startup/firebase-auth-express",
  "version": "0.1.0",
  "description": "Express middleware and guards for Firebase Authentication.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "test": "tsx --test --test-concurrency=1 test/**/*.spec.ts",
    "test:unit": "tsx --test --test-concurrency=1 test/*.unit.spec.ts",
    "test:int": "tsx --test --test-concurrency=1 test/*.int.spec.ts",
    "test:e2e": "tsx --test --test-concurrency=1 test/*.e2e.spec.ts"
  },
  "keywords": [
    "firebase",
    "auth",
    "express",
    "middleware",
    "rbac",
    "security"
  ],
  "author": "My Fucking Startup",
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/my-f-startup/firebase-auth-express.git"
  },
  "bugs": {
    "url": "https://github.com/my-f-startup/firebase-auth-express/issues"
  },
  "homepage": "https://github.com/my-f-startup/firebase-auth-express#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "peerDependencies": {
    "express": "^4.19.2 || ^5.0.0",
    "firebase-admin": "^13.6.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0",
    "supertest": "^7.1.4",
    "testcontainers": "^10.28.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
